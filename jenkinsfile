pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')

        TF_VAR_region = 'us-west-1'
    }


    stages {
        stage('Checkout') {
            steps {
                script {
                    dir('terraform') {
                        bat 'git clone -b main https://github.com/Chetanmilmile/wildcraft.git'
                    }
                }
            }
        }

        stage('Install Terraform') {
            steps {
                // Download and install Terraform
                bat 'curl -o terraform.zip https://releases.hashicorp.com/terraform/0.15.5/terraform_0.15.5_windows_amd64.zip'
                bat 'Expand-Archive -Path terraform.zip -DestinationPath C:\\Terraform'
                bat 'Set-Location C:\\Terraform'
            }
        }

         stage('Terraform Init') {
            steps {
                // Initialize Terraform
                bat 'terraform init'
            }
        }
        
        stage('Terraform Plan') {
            steps {
                // Execute Terraform plan
                bat 'terraform plan -out=tfplan'
            }
        }
        
        stage('Terraform Apply') {
            steps {
                // Apply Terraform changes
                bat 'terraform apply -auto-approve tfplan'
            }
        }
            }
                post {
        always {
            // Cleanup
            cleanWs()
        }
    }
}
